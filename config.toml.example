# UESTC 统一身份认证账号
username = "your_student_id"
password = "your_password"

# 监控轮询间隔（秒）
interval_seconds = 600

# 服务基础 URL (通常无需修改)
service_url = "https://online.uestc.edu.cn"

# PostgreSQL 数据库连接地址
database_url = "postgresql://user:password@localhost:5432/uestc_power_monitor"

# 通知配置
[notify]
enabled = true            # 是否启用通知
threshold = 5.0          # 余额报警阈值（元）
cooldown_minutes = 520    # 报警冷却时间（分钟）
heartbeat_enabled = true  # 是否启用每日心跳通知
heartbeat_hour = 9        # 每日心跳通知时间（0-23）
notify_type = "console"  # 通知类型: console, webhook, telegram

# Webhook 配置 (仅 notify_type = "webhook" 时需要)
webhook_url = "https://webhook.site/..."

# Telegram 配置 (仅 notify_type = "telegram" 时需要)
telegram_bot_token = "your_bot_token"
telegram_chat_id = "your_chat_id"